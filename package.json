{
  "name": "personal-ai",
  "version": "1.0.0",
  "description": "A desktop application that provides a chat interface for interacting with local AI models through Ollama.",
  "main": "electron/dist/main.js",
  "scripts": {
    "dev:next": "next dev -p 8899",
    "build:next": "next build",
    "dev:electron": "npm run build:electron && electron .",
    "build:electron": "tsc -p electron/tsconfig.json",
    "dev": "concurrently -n \"NEXT,ELECTRON\" -c \"cyan,yellow\" \"npm run dev:next\" \"wait-on http://localhost:8899 && npm run dev:electron\"",
    "build": "npm run build:next && npm run build:electron",
    "start": "electron ."
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@types/sql.js": "^1.4.9",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^11.0.2",
    "next": "^15.5.4",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sql.js": "^1.13.0",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.1"
  },
  "devDependencies": {
    "@types/electron-store": "^1.3.1",
    "electron-rebuild": "^3.2.9"
  }
}
